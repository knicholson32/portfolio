---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

const { class: className } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-neutral-50 dark:bg-neutral-900">
  <head>
    <slot name="header" />
  </head>

  <body>
    <Header />
    <main class="flex flex-col w-full items-center py-6">
      <div class="prose dark:prose-invert prose-amber prose-img:rounded-xl">
        <slot/>
      </div>
    </main>
    <Footer />
  </body>
</html>
