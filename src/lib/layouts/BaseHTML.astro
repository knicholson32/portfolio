---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  class?: string;
  useViewTransitions?: boolean;
  pageType?: "devlog";
}

const {
  class: className,
  useViewTransitions = true,
  pageType = "devlog",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-neutral-100 dark:bg-neutral-925" style="">
  <head>
    <slot name="header" />
    {useViewTransitions ? <ViewTransitions /> : ""}
  </head>

  <body class="bg-neutral-50 dark:bg-neutral-900 " style="overscroll-behavior: none;">
    <Header title={pageType} />
    <main id="main" class="absolute top-16 xl:top-20 bottom-0 left-0 right-0 overflow-y-auto pt-6" style="">
      <div class="h-fit w-full flex flex-col items-center prose dark:prose-invert prose-amber prose-img:rounded-xl prose-h2:scroll-m-6 prose-h3:scroll-m-6 prose-h4:scroll-m-4 prose-h5:scroll-m-1 prose-h6:scroll-m-1 p-4 max-w-full">
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>
