{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/lib/components/*"],
      "@lib": ["./src/lib/"],
      "@consts": ["./src/lib/consts.ts"],
      "@layouts/*": ["./src/lib/layouts/*"],
      "@content/*": ["./src/content/*"],
      "@styles/*": ["./src/lib/styles/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
